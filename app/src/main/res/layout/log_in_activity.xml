<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bbground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            app:srcCompat="@drawable/subhead" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            app:srcCompat="@drawable/fetsu" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/date" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/googleSignInImageView"
            android:layout_below="@+id/twitterLogInImageView"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/borderor" />

        <ImageView
            android:id="@+id/googleSignInImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:clickable="true"
            android:elevation="4dp"
            app:srcCompat="@drawable/gmailbutton" />

        <ImageView
            android:id="@+id/twitterLogInImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView9"
            android:layout_below="@+id/facebookLogInImageView"
            android:layout_marginTop="19dp"
            app:srcCompat="@drawable/twitterbutton" />


        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/imageView9"
            android:layout_alignStart="@+id/googleSignInImageView"
            android:layout_alignTop="@+id/facebookLogInImageView"
            android:layout_marginTop="7dp"
            android:alpha="0"
            android:autoText="false"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent" />

        <ImageView
            android:id="@+id/facebookLogInImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/twitterLogInImageView"
            android:layout_below="@+id/imageView7"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/facebook" />


    </RelativeLayout>
</FrameLayout>